{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchDepNames": ["zone.js"],
      "allowedVersions": "<0.12.0"
    },
    {
      "groupName": "Angular Group",
      "matchPackagePrefixes": ["@angular/"],
      "allowedVersions": "<13.0.0"
    },
    {
      "groupName": "Angular Builders Group",
      "matchPackagePrefixes": ["@angular-builders"],
      "allowedVersions": "<13.0.0"
    },
    {
      "groupName": "Font Awesome Group",
      "matchPackagePrefixes": ["@fontawesome/", "font-awesome"]
    },
    {
      "groupName": "NGX Group",
      "matchPackagePrefixes": ["ngx-"]
    },
    {
      "groupName": "Jest Group",
      "matchPackagePrefixes": ["jest", "@types/jest"]
    },
    {
      "groupName": "Prettier Group",
      "matchPackagePrefixes": ["prettier"]
    },
    {
      "groupName": "Webpack Group",
      "matchPackagePrefixes": ["webpack"]
    }
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 3,
  "branchConcurrentLimit": 3,
  "enabledManagers": ["npm"],
  "separateMultipleMajor": true
}
